# ResumeForge Development Environment
APP_NAME=ResumeForge
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite+aiosqlite:///./resumeforge.db

# OpenAI Configuration (placeholder - you'll need to add your real key)
OPENAI_API_KEY=sk-test-key-placeholder-replace-with-real-key
OPENAI_MODEL_TEXT=gpt-4o-mini
OPENAI_MODEL_VISION=gpt-4o

# Blob Storage Configuration (optional for local development)
BLOB_STORAGE_FALLBACK=true

# Security Settings
SECRET_KEY=your-secret-key-at-least-32-characters-long-for-development

# File Processing Settings
MAX_FILE_SIZE_MB=10
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MINUTES=10

# CORS Settings (handled in DevelopmentSettings class)

# Logging
LOG_LEVEL=INFO
