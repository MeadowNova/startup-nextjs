# ResumeForge Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=ResumeForge
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
# For local development, you can use SQLite:
DATABASE_URL=sqlite:///./resumeforge.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/resumeforge

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_TEXT=gpt-4o-mini
OPENAI_MODEL_VISION=gpt-4o

# Blob Storage Configuration (Optional for local development)
# BLOB_READ_WRITE_TOKEN=your-vercel-blob-token-here
BLOB_STORAGE_FALLBACK=true

# Security Settings
SECRET_KEY=your-secret-key-at-least-32-characters-long

# File Processing Settings
MAX_FILE_SIZE_MB=10
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MINUTES=10

# CORS Settings (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
# SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
